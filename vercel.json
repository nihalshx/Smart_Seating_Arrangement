{
    "version": 2,
    "builds": [
        {
            "src": "wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.11",
                "includedFiles": ["templates/**", "static/**"]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/wsgi.py"
        }
    ],
    "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "production",
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": ".",
        "FLASK_SECRET_KEY": "temporary-secure-key-replace-in-vercel-dashboard"
    }
}